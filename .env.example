# Stria-LM Environment Configuration
# Copy this file to .env and update with your values
# This file contains sensitive credentials - do not commit to version control

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database type: "sqlite" for local portable databases, "postgresql" for remote
DATABASE_TYPE=sqlite

# PostgreSQL connection URL (only used when DATABASE_TYPE=postgresql)
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost/strialm

# =============================================================================
# API KEYS
# =============================================================================

# OpenRouter API key for LLM agents (auto-generation features)
OPENROUTER_API_KEY=

# OpenAI API key (for OpenAI embedding models)
OPENAI_API_KEY=

# =============================================================================
# EXPERIMENTAL FEATURES
# =============================================================================

# Enable weighted similarity scoring for QA pairs
ENABLE_WEIGHTS=true
